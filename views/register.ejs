<%-include ('./layouts/header') -%>
<div class="container" id="register">
    <div class="row">
        <div class="col-lg-5">
            <h2><%= title %></h2>


            <form action="/users/register" method="post">
                <div class="form-floating mb-3">
                <input type="text" name="name" class="form-control" id="floatingInput1" placeholder=" ">
                  <label for="floatingInput1">Name</label>
                </div>
                <div class="form-floating mb-3">
                <input type="text" name="email" class="form-control" id="floatingInput2" placeholder=" ">
                  <label for="floatingInput2">Email address</label>
                </div>
                <div class="form-floating mb-3">
                <input type="text" name="username" class="form-control" id="floatingInput3" placeholder=" ">
                  <label for="floatingInput3">Username</label>
                </div>
                <div class="form-floating mb-3">
                <input type="password" name="password" class="form-control" id="floatingInput4" placeholder=" ">
                <label for="floatingInput4">Password</label>
              </div>
              <div class="form-floating mb-3">
              <input type="password" name="password2" class="form-control" id="floatingInput5" placeholder=" ">
              <label for="floatingInput5">Confirm Password</label>
            </div>
                            <div class="form-floating mb-3">
                <input type="text" name="phone" class="form-control" id="floatingInput3" placeholder=" ">
                  <label for="floatingInput3">phone</label>
                </div>
                                <div class="form-floating mb-3">
                <input type="file" name="avatar" class="form-control" id="floatingInput3" placeholder=" ">
                  <label for="floatingInput3">avatar</label>
                </div>
               
            <% if (errors) {%>
                <% errors.forEach(function(error){%>
                    <div class="alert-danger my-3 py-3" style="position:relative;">						
                    <%= error.msg %>
                    <i class="bi bi-exclamation-circle" style="position:absolute; right:12px;"></i>
                </div>
                <% }); %>
            <% } %>
                <div class="form-floating mb-3">
                <button type="submit" class="btn btn-primary btn-xl w-100"> Đăng ký</button>
                </div>
                </form>
        </div>
    </div>
</div>

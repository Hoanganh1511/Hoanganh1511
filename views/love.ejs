                Quick View Detail
                    <% (p.size).forEach(function(s) { %>
                        <p href=""><%= s %></p>
            
            
                      <% }) %>
                 </div>
               
            </a>
            
        </div>
        <p class="category-product"><%= p.category %></p>
        <h3 class="title-product"><%= p.title %></h3>
       
            <p class="price-product"><b>Â£</b><%= p.price %></p>
    </div>
    
    <% }); %>

</div>
